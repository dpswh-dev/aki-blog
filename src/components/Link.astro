---
import { cn } from '@utils/utils'
import type { HTMLAttributes } from 'astro/types'

type Props = {
  state: 'default' | 'active'
  className?: string
} & HTMLAttributes<'a'>

const { state, className, ...attributes } = Astro.props
---

<a
  class={cn(
    'text-base font-medium transition-all w-fit',
    className,
    {
      'hover:text-display text-subtitle': state === 'default',
    },
    {
      'text-accent': state === 'active',
    }
  )}
  {...attributes}
>
  <slot />
</a>
